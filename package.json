{
  "name": "@tam/mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for market sizing analysis, TAM/SAM calculations, and industry research",
  "license": "MIT",
  "author": "TAM MCP Server Contributors",
  "homepage": "https://github.com/gvaibhav/TAM-MCP-Server",
  "bugs": "https://github.com/gvaibhav/TAM-MCP-Server/issues",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tam-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:stdio": "node dist/stdio-simple.js",
    "start:sse": "node dist/sse-new.js",
    "start:http": "node dist/http.js",
    "dev": "npm run build && npm run start",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "axios": "^1.9.0",
    "dotenv": "^16.3.1",
    "express": "^4.21.1",
    "node-cache": "^5.1.2",
    "winston": "^3.11.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "shx": "^0.3.4",
    "supertest": "^7.1.1",
    "typescript": "^5.6.2",
    "vitest": "^3.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "tam",
    "sam",
    "market-sizing",
    "industry-analysis",
    "business-intelligence",
    "ai",
    "llm"
  ]
}
