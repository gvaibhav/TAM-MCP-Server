{
  "name": "tam-mcp-server",
  "version": "1.0.0",
  "description": "Comprehensive Model Context Protocol server for market sizing analysis, TAM/SAM calculations, and business intelligence",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "tam-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "market-sizing",
    "tam",
    "sam",
    "industry-analysis",
    "business-intelligence",
    "market-research",
    "typescript",
    "express",
    "prometheus",
    "anthropic",
    "claude",
    "ai-tools",
    "business-analysis",
    "market-data",
    "forecasting"
  ],
  "author": {
    "name": "Gvaibhav",
    "url": "https://github.com/gvaibhav"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gvaibhav/TAM-MCP-Server.git"
  },
  "bugs": {
    "url": "https://github.com/gvaibhav/TAM-MCP-Server/issues"
  },
  "homepage": "https://github.com/gvaibhav/TAM-MCP-Server#readme",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "axios": "^1.6.2",
    "node-cache": "^5.1.2",
    "uuid": "^9.0.1",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "18.19.0",
    "npm": "10.2.3"
  }
}
