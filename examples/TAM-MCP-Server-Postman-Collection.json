{
  "info": {
    "name": "TAM MCP Server API Collection",
    "description": "Comprehensive Postman collection for testing the Total Addressable Market (TAM) MCP Server with all tools and resources. This collection includes HTTP Streamable MCP endpoints, health checks, and session management.",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "noauth"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set server URL if not already set",
          "if (!pm.collectionVariables.get('serverUrl')) {",
          "    pm.collectionVariables.set('serverUrl', 'http://localhost:3000');",
          "}",
          "",
          "// Set request ID if not already set",
          "if (!pm.collectionVariables.get('requestId')) {",
          "    pm.collectionVariables.set('requestId', Math.floor(Math.random() * 1000000));",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Extract session ID from initialize response",
          "if (pm.request.name === 'Initialize MCP Connection' && pm.response.code === 200) {",
          "    const sessionId = pm.response.headers.get('mcp-session-id');",
          "    if (sessionId) {",
          "        pm.collectionVariables.set('sessionId', sessionId);",
          "        console.log('Session ID saved:', sessionId);",
          "    }",
          "}",
          "",
          "// Check for successful responses",
          "pm.test('Status code is 200', function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "// Parse response based on content type",
          "const contentType = pm.response.headers.get('content-type');",
          "if (contentType && contentType.includes('text/event-stream')) {",
          "    pm.test('SSE response received', function () {",
          "        pm.expect(pm.response.text()).to.include('data:');",
          "    });",
          "} else {",
          "    pm.test('JSON response structure', function () {",
          "        const jsonData = pm.response.json();",
          "        pm.expect(jsonData).to.have.property('jsonrpc', '2.0');",
          "        pm.expect(jsonData).to.have.property('id');",
          "    });",
          "}"
        ]
      }
    }
  ],
